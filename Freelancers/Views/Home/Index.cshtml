<html>
<body>

    <h1>Sample Test</h1>
    <div class="row">
        <div class="col-6">
        @Html.BeginForm("AddUser", "Home", FormMethod.Post)
        {
        <div class="form-group">
            <label for="no1">Username</label>
            <input type="text" class="form-control" id="txtUsername" name="txtUsername" value="" />
        </div>
        <div>
