            <label for="no1">Phone</label>
                <input type="text" class="form-control" id="txtPhone" required name="txtPhone" value="" />
        </div>
        <div>
            <label for="no1">SkillSet</label>
                <input type="text" class="form-control" id="txtSkillset" required name="txtSkillset" value="" />
        </div>
        <div>
            <label for="no1">Hobby</label>
                <input type="text" class="form-control" id="txtHobby" required name="txtHobby" value="" />
        </div>


        <div class="button">
            
            <input type="submit" value="Save User" id="btnSaveUser" class="btn btn-primary" name="b1" />
        </div>
        
        </div>
        }
        <div class="col-6">
           
                @Html.Partial("AddUserAsync");

            
            
        </div>
    </div>

    

</body>
